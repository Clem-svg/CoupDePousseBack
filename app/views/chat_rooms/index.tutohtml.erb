<div id="chat_room-id" data-chat_room-id="<%= @chat_room.try(:id) %>"></div>
<div id="user-id" data-user-id="<%= current_user.id %>"></div>

<div class="container-fluid">
  <div class="row">
    <div class="col-3 chat_rooms-sidebar">
      <div class="card no-outline">
        <div class="card-body">
          <small>Logged in as</small><br>
          <b><%= current_user.username %><br></b>
        </div>
      </div>
      <hr>
      <%= render 'form', chat_room: ChatRoom.new %>
      <hr>
      <% @chat_rooms.each do |chat_room| %>
        <%= link_to chat_room, class: 'chat_room-link' do %>
          <% active_class = (@chat_room == chat_room) ? 'active' : '' %>
          <div class="card no-outline mb-2 chat_room-card <%= active_class %>">
            <div class="card-body">
              <span class='name'><%= chat_room.title %></span><br>
              <span class='member-count'>
              </span>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
    <div class="col-9">
      <% if @chat_room.present? %>
        <div class="chat-chat_room">
          <nav class="navbar navbar-light">
            <span class="navbar-brand" href="#">
              <b><%= @chat_room.title %></b>
            </span>
          </nav>
          <div id="messages">
            <% @chat_room.messages.each do |message| %>
              <%= render 'messages/message', message: message %>
            <% end %>
          </div>
          <div class="chat-box">
            <%= render 'messages/form', message: Message.new, chat_room: @chat_room %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
